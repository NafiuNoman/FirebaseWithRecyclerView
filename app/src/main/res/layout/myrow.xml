<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/IdrowId"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:hint="Id"
        android:textColor="#3466FF"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/IdrowName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/IdrowName" />

    <TextView
        android:id="@+id/IdrowName"
        android:layout_width="134dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:hint="Name"
        android:textColor="#3466FF"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/IdrowMajor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/IdrowId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IdrowMajor"
        android:layout_width="136dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:hint="Major"
        android:textColor="#3466FF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/IdrowName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IdrowName" />
</androidx.constraintlayout.widget.ConstraintLayout>